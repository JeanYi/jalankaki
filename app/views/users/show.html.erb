<div class="container-fluid">
	<div class="row">
	  	<div class="col-sm-4"> 	
			<div class="card">
			 <div class="profile-image">
			  <% if @user.image != nil %>
				<img src="<%= @user.image.medthumb.url %>" style="margin:auto, width:100%">
			  <% else %> 
			  	<img src= "/assets/missing.png" style="margin:auto, width:50%"> 
			  <% end %> 
			 </div>

			  <div style="margin: 10px 0;">
			  	<h6> Name: <%= @user.name %></h6>
			  </div>

			  <div style="margin: 10px 0;">
			  	<h6> Email: <%= @user.email %></h6>
			  </div>

			  <div style="margin: 10px 0;">
				<%= button_to 'Edit', edit_user_path(@user), method: :get, class:"btn btn-warning"  %> 
			  </div>
			</div>
		</div>

	  	<div class="col-sm-8" style="text-align:left"> 
	  		<strong> History </strong> <br/>
	  		<hr> 
			<table class="table table-striped">
			    <thead>
			      <tr>
			        <th style="width:10%">Activity</th>
			        <th style="width:30%">Title</th>
			        <th style="width:10%">Location</th>        
			        <th style="width:10%">Date</th>
			        <th style="width:20%">Hosted By</th>
			      </tr>
			    </thead>
			    <tbody id=myTable>
			        <% @participant.each do |t| %> 
			      <tr>
			        <td><%= t.activity.activity.sub(/\S/, &:upcase).titleize %></td>
			        <td><%= t.activity.title %></td>
			        <td><%= t.activity.location.sub(/\S/, &:upcase) %></td>
			        <td><%= t.activity.activity_date.strftime("%d-%b-%y") %></td>
			        <td><%= t.activity.hosted_by.sub(/\S/, &:upcase) %></td>			      </tr>
			        <% end %> 
			    </tbody>
			  </table>
	  	</div>
	 </div>
</div>





